<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <!-- ヘッダ -->

    <TableLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:shrinkColumns="0"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textTitleCompanyName"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="会社名" />

            <TextView
                android:id="@+id/textCompanyName"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textTitleIndustrialCategory"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="業種" />

            <TextView
                android:id="@+id/textTitleIndustrialCategory"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="会計年度" />
        </TableRow>
    </TableLayout>

    <!-- フッター -->

    <LinearLayout
        android:id="@+id/fotter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnAnalyzeCompany"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="診断" />
    </LinearLayout>

    <!-- コンテンツ -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fotter"
        android:layout_below="@+id/header" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2008年度" >
            </Button>

            <Button
                android:id="@+id/Button03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2009年度" >
            </Button>

            <Button
                android:id="@+id/Button04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2010年度" >
            </Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2011年度" >
            </Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2012年度" >
            </Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2013年度" >
            </Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2014年度" >
            </Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="2015年度" >
            </Button>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>